# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         controllers.UserController.index(req: Request)
POST    /users                    controllers.UserController.addUser(req: Request)
GET     /users                    controllers.UserController.getAllUsers()
GET     /users/:id                 controllers.UserController.getUser(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


#JobOffers
POST    /joboffer/addjoboffer       controllers.JobOfferController.addJobOffer(req: Request)
GET     /joboffer/getjobofferbyid   controllers.JobOfferController.getJobOfferById()
DELETE  /joboffer/removejoboffer    controllers.JobOfferController.removeJobOffer()
PUT     /joboffer/updatejoboffer    controllers.JobOfferController.updateJobOffer()
GET     /joboffer                   controllers.JobOfferController.getAllJobOffers()
