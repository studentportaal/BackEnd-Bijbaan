# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UserController.index(req: Request)
POST    /users                      controllers.UserController.addUser(req: Request)
POST    /users/login                controllers.UserController.login(req: Request)
GET     /users                      controllers.UserController.getAllUsers()
GET     /users/:id                  controllers.UserController.getUser(id: String)
PUT     /users/:id                  controllers.UserController.updateUser(req: Request, id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


#JobOffers
POST    /joboffer                   controllers.JobOfferController.addJobOffer(request: Request)
GET     /joboffers                  controllers.JobOfferController.getAllJobOffers()
