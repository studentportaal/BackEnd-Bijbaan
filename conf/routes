# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         controllers.UserController.index(req: Request)
POST    /users                    controllers.UserController.addUser(req: Request)
GET     /users                    controllers.UserController.getAllUsers()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


#JobOffers
GET     /joboffer/:id               controllers.JobOfferController.getJobOfferById(id: String)
POST    /joboffer                   controllers.JobOfferController.addJobOffer(request: Request)
GET     /joboffer                   controllers.JobOfferController.getAllJobOffers(startNr: String ?= null, amount: String ?= null)
GET     /joboffer/count             controllers.JobOfferController.getJobOfferCount()

#Company
POST    /company                    controllers.CompanyController.addCompany(request: Request)
PUT     /company                    controllers.CompanyController.updateCompany(request: Request)
